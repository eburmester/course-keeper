<%= form_for @course do |f| %>
  <%= f.label :title %>:
  <%= f.text_field :title %>
  <br>
  <%= f.label :description %>:
  <%= f.text_area :description %>
  <br>
  <%= f.hidden_field :created_by, value: current_user.id %>
  <%= f.hidden_field :created_on, value: Date.today %>
  </br>
  <%= f.submit %>
<% end %>