<% if course.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <ul>
    <% course.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for [user, course] do |f| %>
  <%= f.label :title %>:
  <%= f.text_field :title %>
  <br>
  <%= f.label :description %>:
  <%= f.text_area :description %>
  <br>

  <%= f.hidden_field :created_by, value: user %>
  <%= f.hidden_field :created_on, value: Date.today %>
  </br>
  <%= f.submit %>
<% end %>
