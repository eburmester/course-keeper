<h1><%= @course.title.upcase %></h1>
<h2><%= @course.description %></h2>
</br>


<% if @course.assignments.length > 0 %>
  <h4>Assignments:</h4> 
  <p>Easy:
  <p><% @course.assignments.easy.each do |a|%>
          <%= link_to a.title.capitalize, course_assignment_path(a.course_id, a.id)%></br></p>
  <% end %>
  <p>Medium:
  <p><% @course.assignments.medium.each do |a|%>
            <%= link_to a.title.capitalize, course_assignment_path(a.course_id, a.id)%></br></p>
  <% end %>
  <p>Hard:
  <p><% @course.assignments.hard.each do |a|%>
          <%= link_to a.title.capitalize, course_assignment_path(a.course_id, a.id)%></br></p>
  <% end %>
    <% else %>
      <p> This course doesn't have any assignments yet. </p>
    <%end%>
</br>
</br>
<% if @course.user == current_user %>
  <%= link_to "Add an Assignment", new_course_assignment_path(@course) %></p>
<%end%>
</br>
</br>

<p>Created On: <%= @course.created_on.strftime("%B %e, %Y") %></p>


<p>
<% if @course.user == current_user %>
<%= form_tag(edit_user_course_path, method: "get") do %>
  <%= submit_tag("Edit this Course") %>
  <%end%>
<%= form_tag(user_course_path, method: "delete") do %>
  <%= submit_tag("Delete this Course") %>
<%end%>
<%= form_tag(user_courses_path, method: "get") do %>
  <%= submit_tag("Back to My Courses") %>
  <%end%>
<% end %>
</p>






